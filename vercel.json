{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    
    { "src": "/api/(.*)", "dest": "/backend/index.js" },

    { "src": "/(.*\\.(js|css|map|ico|png|jpg|jpeg|svg|json|txt|woff2?|eot|ttf))", "dest": "/frontend/$1" },

    { "src": "/.*", "dest": "/frontend/index.html" }
  ]
}
